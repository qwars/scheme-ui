@import './label.styl'
@import './input.styl'
@import './fieldset.styl'
@import './button.styl'

.info
	color: var(--color-info)

.warning
	color: var(--color-warning)

.error
	color: var(--color-error)

a
	color: var( --color-link )
	text-decoration: none
	&:hover
		color: var( --color-hover )
	&:active
		color: var(--color-visited)
	&.active
		color: var( --color-active )

dfn
	font: var( --font-extra )
	color: var( --color-extra )

var
	font: var( --font-extra )

em
	display: flex
	grid-gap: 1ex
	color: var( --color-extra )
	& > aside
		flex-grow: 1
		display: flex
		justify-content: flex-end
		flex-wrap: nowrap
		grid-gap: 1rem
		padding: 0px 1rem

dl
	display: grid
	grid-template-columns: auto 1fr
	grid-gap: 1em
	margin: 0px
	padding: 0px
	dt, dd
		margin: 0px
		padding: 0px
	dt
		text-align: right
		& + dt
			display: none
	dd + dd
		display: none

