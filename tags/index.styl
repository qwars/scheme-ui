h1
	font: var( --font-title )
	font-size: 1.3em
	font-weight: bolder
	margin: 0px
	color: var( --color-title )
	dfn
		display: block
		color: var( --color-extra )

h2
	font: var( --font-title )
	font-size: 1.17em
	font-weight: bolder
	margin: 0px
	color: var( --color-title )
	dfn
		display: block
		color: var( --color-extra )

h3
	font: var( --font-title )
	font-size: 1.04em
	font-weight: bolder
	margin: 0px
	color: var( --color-title )
	dfn
		display: block
		color: var( --color-extra )

h4
	font: var( --font-title )
	font-size: 0.91em
	font-weight: bolder
	margin: 0px
	color: var( --color-title )
	dfn
		display: block
		color: var( --color-extra )

hr
	border: 0px solid transparent
	height: 1px
	background: var( --color-mark )
	display: flex
	align-items: center
	overflow: visible
	padding: 0px 1rem
	margin: 1em 0px
	& > abbr
		margin: 0 1rem
		border: 1px solid var( --color-mark )
		border-radius: 1rem
		width: 1.2rem
	& > legend
		background: var( --color-background )
		color: var( --color-focus )
		font-weight: bold
		font-size: 1.04em
		padding: 0px 1rem

iframe
	border: 1px solid var( --color-mark )

