
label
	position: relative
	box-sizing: border-box
	display: inline-flex
	align-items: stretch
	flex-wrap: nowrap
	flex-direction: row-reverse

	& > var
		border: 1px solid var( --color-placeholder )
		border-right: 0px solid transparent
		padding: 0px 1ex
		display: flex
		align-items: center
		justify-content: center
		order: 3

	& > ins
		border: 1px solid var( --color-placeholder )
		display: flex
		padding: 0px 1ex
		grid-gap: 1ex
		flex-grow: 1
		text-decoration: none
		flex-wrap: wrap
		align-items: center
		&:after
			content: '\229E'
			color: var( --color-placeholder )
			font-size: 2.4em
			line-height: 0px
			cursor: pointer
			transform: translateY(-.13ex)
			&:hover
				color: var( --color-hover )
	& > abbr
		border: 1px solid var( --color-placeholder )
		display: flex
		grid-gap: 1ex
		flex-grow: 1
		text-decoration: none
		flex-wrap: wrap
		align-items: center

	& > span
		padding: 0px 1ex
		align-self: center
		order: 3

	// Checkbox type SWITCH
	& > s
		display: inline-flex
		align-self: center
		align-items: center
		justify-content: flex-end
		cursor: pointer
		width: 2rem
		height: 1rem
		background: var( --color-disabled )
		border: 0px solid transparent
		border-radius: 1rem
		position: relative
		overflow: hidden
		padding: 1px
		& > [type=checkbox]
			width: 1rem
			max-width: 1rem
			height: 1rem
			border-radius: 1rem
			background: white !important
			padding: 0px
			margin: 0px
			border: 1px solid var( --color-disabled )
			transition: border-width .3s
			box-sizing: content-box
			&:checked
				border: 1rem solid var( --color-info )
				box-shadow: 1rem 1rem 0px 2rem var( --color-info )
				width: 1rem
				max-width: 1rem
				min-width: 1rem
				height: 1rem
				max-height: 1rem
				min-height: 1rem
				border-radius: 2rem

	& > legend
		position: absolute
		left: 0
		margin: 0px 1ex
		padding: 0px 1ex
		box-sizing: border-box
		display: flex
		align-items: center
		height: 5px
		transform: translateY(-4px)
		background: var( --color-background )
		grid-gap: 1ex
		white-space: nowrap
		&:empty
			display: none

	& > sub
		position: absolute
		right: 1em
		bottom: 0px
		display: flex
		height: 2px
		align-items: center
		background: var( --color-background )
		padding: 0px 1em
		padding-bottom: 2px
		white-space: nowrap

	& > kbd
		position: absolute
		top: 0px
		bottom: 0px
		right: 0px
		margin: auto
		display: flex
		align-items: center
		justify-content: center
		background: var( --color-background )
		width: 0px
		height: 0px
		color: var( --color-placeholder )
		& > svg
			background: var( --color-background )
		&:empty:before
			content: '\2753'
			display: inline-flex
			align-items: center
			justify-content: center
			min-width: 2.168ex
			min-height: 2ex
			font-size: 1.6ex
			font-weight: bold
			border-radius: 50%
			color: var( --color-background )
			background: var( --color-placeholder )
			font-size: .9em

	& > input
		order: 2
		& + details
			border: 1px solid var( --color-placeholder )
			border-left: 0px solid transparent
			display: inline-flex
			align-items: center
			justify-content: center
			box-sizing: border-box
			position: relative
			order: 1
			&[open] > u, &[open] > ul
				display: none
			&[open] > s
				position: absolute
				z-index: 1
				& > *
					background-color: var( --color-background )
					border: 1px solid var( --color-placeholder )
			& > summary
				padding: 0px 1ex
				display: flex
				align-items: center
				justify-content: center
				height: 100%
				&:empty:before
					content: '\2B04'
					display: flex
					align-items: center
					justify-content: center
					font-size: 1.2em
					font-weight: bold
					line-height: 1.2em
				&::-webkit-details-marker
					display: none

	& > details
		border: 1px solid var( --color-placeholder )
		display: flex
		align-items: center
		justify-content: center
		box-sizing: border-box
		position: relative
		flex-grow: 1
		&[open] > *:not(summary)
			position: absolute
			z-index: 1
			& > *
				background-color: var( --color-background )
				border: 1px solid var( --color-placeholder )
		& > summary
			padding: 0px 1ex
			display: flex
			align-items: center
			justify-content: center
			height: 100%
			&::-webkit-details-marker
				display: none
